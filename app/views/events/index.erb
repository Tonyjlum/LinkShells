<h1 align= "center">Upcoming events</h1>
<div class="row " style="column-gap: 30px;">
  <% @events.each do |event| %>
  <div class="col-4" style="margin-bottom: 30px;">
    <div class="card-body shadow-lg rounded" style="background-color: #<%= event.full? ? "A9A9A9" : hex_color_sample  %>;" align= "center">
      <%= link_to image_tag(event.game.logo, class: "img-responsive center-block"), event %><%= "#{event.date} [#{event.full_message}]"%><br>
      <%= "#{event.location}" %><br>
      <%= "#{pluralize((event.max_player - event.confirms.count), "slot")} left" %>
    </div>
  </div>
  <% end %>
</div>
