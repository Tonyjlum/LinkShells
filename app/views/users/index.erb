<img src="https://i.ibb.co/sQ9ZmVS/Spash04.jpg" alt="Image" width = "100%">
<% if @error %>
  <h1><%@error %></h1>
<% end %>

<div align="right" >
  <%= form_tag login_in_path do %>
    <h3>Login </h3>
    Email
    <%= text_field_tag :email %>
    Password
    <%= password_field_tag :password %>
    <br><br>
    <%= submit_tag "Login" %>
  <% end %>
  <%= button_to "Sign Up", new_user_path, method: "get" %>
</div>
