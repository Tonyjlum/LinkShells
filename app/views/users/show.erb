<h1><%= @user.username %></h1>
<img src="<%= @user.profile_img %>" alt="<%= @user.username %>" width = "200px">


<div class="game-list">
  <h3>Game List</h3>
  <ul>
    <% @game_list.each do |game| %>
      <li><%= link_to game.name, game %></li>
    <% end %>
  </ul>
</div>

<div class="event-list">
  <h3>Hosting:</h3>
  <ul>
    <% @hostings.each do |host|%>
      <li><%= link_to "#{host.game.name} on #{host.date}", host %></li>
    <% end %>
  </ul>
</div>

